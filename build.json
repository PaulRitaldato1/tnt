{
    "x64-rel": {
        "before": "echo. starting build...",
        "include": [
            ".\\include",
            "%vcpkg_dir%\\x64-windows\\include"
        ],
        "args": [
            "/EHsc",
            "/W3",
            "/O2",
            "/std:c++latest"
        ],
        "define": [
            "TNT_RELEASE"
        ],
        "cpp": [
            "main.cpp",
            ".\\src\\*.cpp",
            ".\\src\\private\\*.cpp"
        ],
        "exe": ".\\bin\\x64\\release\\tnt.exe",
        "obj": ".\\obj\\",
        "link": {
            "linkargs": [
                "/MACHINE:X64",
                "/SUBSYSTEM:CONSOLE"
            ]
        },
        "after": "echo. build finished succesfully!\n"
    },
    "test": {
        "cpp": [
            "main.cpp",
            ".\\src\\LuaSandbox.cpp",
            ".\\src\\Object.cpp"
        ],
        "include": [
            "%vcpkg_dir%\\x64-windows\\include",
            ".\\include"
        ],
        "args": [
            "/EHsc",
            "/O2",
            "/std:c++17"
        ],
        "exe": ".\\test\\test.exe",
        "link": {
            "libpath": "%vcpkg_dir%\\x64-windows\\lib",
            "libs": [
                "lua.lib"
            ]
        },
        "after": [
            "del *.obj",
            ".\\test\\test.exe"
        ]
    }
}